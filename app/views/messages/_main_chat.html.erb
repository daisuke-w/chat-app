<div class="main-chat__header">
  <div class="left-header">
      <div class="header__title">
        <%= @room.name %>
      </div>
  </div>
  <div class="right-header">
    <div class="header__btn"><a href="#">チャットを終了する</a></div>
  </div>
</div>

<div class="main-chat__messages">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], html: {class: "main-chat__form"}, local: true do |f|%>
  <div class="form__input">
    <%= f.text_field :content, class: 'form__message', placeholder: 'type a message' %>
    <label class="form__image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form__submit' %>
<% end %>