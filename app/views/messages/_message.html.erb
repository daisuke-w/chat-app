<div class="message">
  <div class="message__top">
    <div class="message__name">
      <%= message.user.name %>
    </div>
    <div class="message__day">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="message__bottom">
    <div class="message__content">
      <%= message.content %>
    </div>
      <%= image_tag message.image.variant(resize: '500x500'), class: 'message__image' if message.image.attached? %>
  </div>
</div>