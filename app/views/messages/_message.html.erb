<div class="message">
  <div class="message__top">
    <div class="message__name">
      <%= message.user.name %>
    </div>
    <div class="message__day">
      <%= message.created_at %>
    </div>
  </div>
  <div class="message__bottom">
    <div class="message__content">
      <%= message.content %>
    </div>
  </div>
</div>